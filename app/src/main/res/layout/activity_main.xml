<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableLayout
        android:id="@+id/numbers"
        android:layout_width="415dp"
        android:layout_height="419dp"
        android:clickable="true"
        android:stretchColumns="*"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textField">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/actionClear"
                style="@style/buttonStyle"
                android:background="@android:color/holo_blue_dark"
                android:text="AC" />

            <Button
                android:id="@+id/plusMinus"
                style="@style/buttonStyle"
                android:background="@android:color/holo_blue_dark"
                android:text="+/-" />

            <Button
                android:id="@+id/operationPercent"
                style="@style/buttonStyle"
                android:background="@android:color/holo_blue_dark"
                android:text="%" />

            <Button
                android:id="@+id/operDivide"
                style="@style/buttonStyle"
                android:background="@android:color/holo_blue_dark"
                android:clickable="true"
                android:text="/" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/num1"
                style="@style/buttonStyle"
                android:background="@android:color/holo_green_light"
                android:text="1" />

            <Button
                android:id="@+id/num2"
                style="@style/buttonStyle"
                android:background="@android:color/holo_green_light"
                android:text="2" />

            <Button
                android:id="@+id/num3"
                style="@style/buttonStyle"
                android:background="@android:color/holo_green_light"
                android:text="3" />

            <Button
                android:id="@+id/operMultiply"
                style="@style/buttonStyle"
                android:background="@android:color/holo_blue_dark"
                android:clickable="true"
                android:text="*" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/num4"
                style="@style/buttonStyle"
                android:background="@android:color/holo_green_light"
                android:text="4" />

            <Button
                android:id="@+id/num5"
                style="@style/buttonStyle"
                android:background="@android:color/holo_green_light"
                android:text="5" />

            <Button
                android:id="@+id/num6"
                style="@style/buttonStyle"
                android:background="@android:color/holo_green_light"
                android:text="6" />

            <Button
                android:id="@+id/operSub"
                style="@style/buttonStyle"
                android:background="@android:color/holo_blue_dark"
                android:clickable="true"
                android:text="-" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/num7"
                style="@style/buttonStyle"
                android:background="@android:color/holo_green_light"
                android:text="7" />

            <Button
                android:id="@+id/num8"
                style="@style/buttonStyle"
                android:background="@android:color/holo_green_light"
                android:text="8" />

            <Button
                android:id="@+id/num9"
                style="@style/buttonStyle"
                android:background="@android:color/holo_green_light"
                android:text="9" />

            <Button
                android:id="@+id/operAdd"
                style="@style/buttonStyle"
                android:background="@android:color/holo_blue_dark"
                android:clickable="true"
                android:text="+" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/num0"
                style="@style/buttonStyle"
                android:background="@android:color/holo_green_light"
                android:text="0" />

            <Button
                android:id="@+id/dot"
                style="@style/buttonStyle"
                android:background="@android:color/holo_green_light"
                android:text="," />

            <Button
                android:id="@+id/delete"
                style="@style/buttonStyle"
                android:background="@android:color/holo_green_light"
                android:enabled="true"
                android:text="DEL" />

            <Button
                android:id="@+id/result"
                style="@style/buttonStyle"
                android:background="@android:color/holo_red_dark"
                android:clickable="true"
                android:text="=" />

        </TableRow>

    </TableLayout>

    <EditText
        android:id="@+id/textField"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:gravity="bottom"
        android:maxLength="10"
        android:text="0"
        android:textSize="70dp"
        android:editable="false"
        app:layout_constraintBottom_toTopOf="@+id/numbers"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/history" />

    <EditText
        android:id="@+id/sign"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:background="#FFFFFF"
        android:editable="false"
        android:gravity="center"
        android:singleLine="false"
        android:textSize="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/numbers"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/history"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/history"
        android:layout_width="0dp"
        android:layout_height="66dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:enabled="false"
        android:gravity="center"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/textField"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>